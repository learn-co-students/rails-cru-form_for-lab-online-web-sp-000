
<h1>My Song</h1>
<%= @song.name %>
<% if @song.artist %>
  <h3><%= link_to @song.artist.name, artist_path(@song.artist)%></h3>
<% end %>
<% if @song.genre %>
  <h3><%= link_to @song.genre.name, genre_path(@song.genre)%></h3>
<% end %>

<h4><%= link_to "Back to songs", songs_path%>   <%= link_to "Edit Song", edit_song_path(@song)%></h4>
<%= form_for @song do |f| %>
<%= f.label 'Name: ' %>
<%= f.text_field :name %><br>

<%= f.label 'Artist: ' %>
<%= f.collection_radio_buttons :artist_id, Artist.order(:name), :id, :name %><br>

<%= f.label 'Genre: ' %>
<%= f.collection_radio_buttons :genre_id, Genre.order(:name), :id, :name %><br>

<%= f.submit %>
<% end %>
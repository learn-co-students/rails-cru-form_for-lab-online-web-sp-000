<h1>New Song</h1>

<%= form_tag songs_path do %>
  <label>Song Name: </label><br>
  <%= text_field_tag 'song[name]' %><br><br>

  <label>Artist Name: </label><br>
  <%= text_field_tag 'song[artist_id]' %><br><br>

  <label>Genre Name: </label><br>
  <%= text_field_tag 'song[genre_id]' %><br><br>

  <%= submit_tag "Create Song" %>
<% end %>